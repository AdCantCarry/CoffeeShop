@model CoffeeShop.Models.Product
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2>Chi tiết sản phẩm</h2>

<div class="card">
    <div class="card-body">
        <h4>@Model.Name</h4>
        <p><strong>Mô tả:</strong> @Model.Description</p>
        <p><strong>Giá:</strong> @Model.Price.ToString("N0") đ</p>
        <p><strong>Số lượng:</strong> @Model.Quantity</p>
        <p><strong>Danh mục:</strong> @Model.Category?.Name</p>
        <p><strong>Ảnh:</strong><br />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" style="max-height: 150px;" />
            }
        </p>
        <p><strong>Toppings:</strong><br />
            @foreach (var pt in Model.ProductToppings)
            {
                <span class="badge bg-secondary">@pt.Topping?.Name</span>
            }
        </p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
