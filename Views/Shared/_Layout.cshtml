@{
    Layout = null;
    var username = Context.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CoffeeShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Header -->
    <header class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-brown" href="/">☕ CoffeeShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Product">Sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Cart">Giỏ hàng</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Contact">Liên hệ</a></li>
                </ul>
                <ul class="navbar-nav">
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item me-2">👤 Chào, <strong>@username</strong></li>
                        <li class="nav-item"><a class="btn btn-outline-dark" href="/Account/Logout">Đăng xuất</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="btn btn-outline-primary" href="/Account/Login">Đăng nhập</a></li>
                    }
                </ul>
            </div>
        </div>
    </header>

    <!-- Main content -->
    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            <p>© 2025 CoffeeShop. Đã đăng ký bản quyền.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>